
@model Byte[]
@{
    Layout = "_Layout";
}
    <div id="content">
        <h1 class="card-title">Gerador de QR-Code</h1>
        <p>informe no campo abaixo o conteúdo que deseja gerar o QR-Code. </p>

        <div class="card">

            <div class="card-body" id="viewContent">
                @using (Html.BeginForm(null, null, FormMethod.Post))
                {
                    <div class="row mb-3">
                        <div class="col-sm-12">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Conteúdo</span>
                                </div>
                                <input class="form-control" type="text" name="qrTexto" required />
                                <div class="input-group-append">
                                    <button class="btn btn-primary">Gerar QR-Code</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @{
                    if (Model != null)
                    {
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3>QR-Code Gerado com sucesso!</h3>
                                    </div>
                                    <div class="card-body text-center">
                                        <figure class="figure">
                                            <img src="@String.Format("data:image/png;base64,{0}",
                            Convert.ToBase64String(Model))" class="figure-img img-fluid rounded" alt="...">
                                        </figure>
                                    </div>
                                    <div class="card-footer">
                                        <p class="text-center">
                                            @ViewBag.QrCodeText
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
